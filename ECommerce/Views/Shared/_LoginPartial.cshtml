@using ECommerce.Data
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    <li class="nav-item">
        <a class="nav-link position-relative" href="/Cart/GetUserCart" style="font-size: 20px">
            <i class="bi bi-cart text-black" style="font-size: 20px"></i>
            <span id="cartCount" class="badge bg-danger position-absolute rounded-circle hover-badge" style="font-size:10px">0</span>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link position-relative" href="/Cart/GetUserCart" style="font-size: 20px">
            <i class="bi bi-heart text-black" style="font-size: 20px"></i>
            <span id="wishCount" class="badge bg-danger position-absolute rounded-circle hover-badge" style="font-size:10px">0</span>
        </a>
    </li>
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
