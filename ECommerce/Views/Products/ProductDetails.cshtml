@model ECommerce.Models.Product

@{
    ViewData["Title"] = Model.ProductName;
}

<div class="container">
    <div class="mt-4 mb-5 d-flex flex-row gap-3">
        <a class="text-decoration-none fw-bolder text-black" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        / 
        <label>@Model.ProductName</label>
    </div>
    <div class="row gx-4 gx-lg-5 align-items-center">
        <div class="col-md-6">
            <img class="card-img-top mb-5 mb-md-0" src="https://dummyimage.com/600x700/dee2e6/6c757d.jpg" alt="...">
            <button class="btn btn-outline-dark flex-shrink-0" type="button">
                View More
            </button>
        </div>
        <div class="col-md-6">
            <h1 class="display-5 fw-bolder">@Model.ProductName</h1>
            <div class="fs-5 mb-5">
                @if(Model.OnSale){
                    <span class="text-decoration-line-through">R @Model.OldPrice</span>
                }
                <span>R @Model.Price</span>
            </div>
            <p class="lead">@Model.LongDescription</p>
            <div class="d-flex">
                <input class="form-control text-center me-3" id="inputQuantity" type="number" value="1" style="max-width: 3rem">
                <button class="btn btn-outline-dark flex-shrink-0" type="button">
                    <i class="bi-cart-fill me-1"></i>
                    Add to cart
                </button>
            </div>
        </div>
    </div>
</div>
